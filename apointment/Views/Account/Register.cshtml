@model apointment.ViewModels.SignupViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}
<style>
    .form-control {
        border: none;
        background-color: #6b6b6c2b;
        width: 50%;
        margin-left: 25%;
        margin-top: 6%;
    }
    .register-as {
        border: none;
        background-color: #6b6b6c2b;
        width: 50%;
        margin-left: 25%;
        margin-top: 6%;
    }

    .forgot {
        margin-left: 22%;
    }

        .forgot a {
            color: #6b6b6c;
        }

    .btn-register {
        width: 50%;
        margin-top:6%;
    }

    .sign-img img {
        width: 100%;
        height: 400px;
    }
</style>
<script src="https://code.jquery.com/jquery-3.6.0.js" ></script>
<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        
        $('.register-as').val("RegisterAs");
        $('.occupation').hide();
        $(document).on("change", ".register-as", function () {
            debugger;
            var registerval = $('.register-as').val();
            if (registerval == "Specialist") {
                $('.occupation').show();
            }
            else {
                $('.occupation').hide();
            }
        });
       
       

    });

</script>

<div class="block">
    <div class="block-content" style="margin-top:5%;">
        <div class="row">
            <div class="col-sm-6" style="text-align:center;">
                <div class="register-heding">
                    <h3 style="font-weight:bold;"><span style="color:#0065EC;">Register</span></h3>
                </div>
                <div class="register-sec">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Name, new { placeholder = "Enter Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Email", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Phone, new { placeholder = "Enter Phone Number", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.DropDownListFor(m => m.RegisterAs, new List<SelectListItem> { new SelectListItem { Text = "Register As", Value = "RegisterAs" }, new SelectListItem { Text = "Specialist", Value = "Specialist" }, new SelectListItem { Text = "User", Value = "User",  } }, new { placeholder = "Enter Email or Phone Number", @class = "form-control register-as" })
                            @Html.ValidationMessageFor(m => m.RegisterAs, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.occupation, new { placeholder = "Enter Occupation", @class = "form-control occupation" })
                            @Html.ValidationMessageFor(m => m.occupation, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Address, new { placeholder = "Enter Address", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.City, new { placeholder = "Enter City Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.State, new { placeholder = "Enter State Name", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Register" class="btn btn-primary btn-register" />
                        </div>
                    }
                </div>
            </div>
            <div class="col-sm-6">
                <div class="sign-img">
                    <img src="~/Content/images/undraw_secure_login_pdn4.svg" />
                </div>
            </div>
        </div>

    </div>

</div>
