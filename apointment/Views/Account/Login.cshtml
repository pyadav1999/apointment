@model apointment.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}
<style>
    .form-control {
        border: none;
        background-color:#6b6b6c2b;
        width: 50%;
        margin-left: 25%;
        margin-top: 6%;
    }
    .forgot{
        margin-left:22%;
    }
    .forgot a{color:#6b6b6c;}
    .btn-signin {
        width: 50%;
    }
    .sign-img img{
        width:100%;
        height:400px;
    }
</style>

<div class="block">
    <div class="block-content" style="margin-top:5%;">
        <div class="row">
            <div class="col-sm-6" style="text-align:center;">
                <div class="login-heding">
                    <h3 style="font-weight:bold;"><span style="color:#0065EC;">Sign</span><span>&nbsp;</span><span style="color:#42C6FF;">In</span></h3>
                </div>
                <div class="login-sec">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Email or Phone Number", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Enter Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <p class="forgot"> @Html.ActionLink("Recovery Password", "ForgotPassword", "Account")</p>
                        </div>
                       
                        <div class="form-group">
                            <input type="submit" value="Sign In" class="btn btn-primary btn-signin" />
                        </div>
                    }
                </div>
            </div>
            <div class="col-sm-6">
                <div class="sign-img">
                    <img src="~/Content/images/undraw_Access_account_re_8spm (1).svg" />
                </div>
            </div>
        </div>

    </div>

</div>
